<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--  自定义插件不支持动态SQL生成  <context id="testTables" targetRuntime="MyBatis3DynamicSql"-->
    <context id="testTables" targetRuntime="org.mybatis.generator.codegen.mybatis3.IntrospectedTableMyBatis3SimpleImpl"
             defaultModelType="flat">

        <!-- Mapper.java Mapper.xml 生成插件 -->
        <plugin type="com.smart4y.cloud.core.infrastructure.mapper.generator.plugins.MapperClassAndXmlPlugin">
            <property name="mappers" value="com.smart4y.cloud.core.infrastructure.mapper.CloudMapper"/>
            <property name="author" value="Youtao"/>
        </plugin>
        <!-- Entity 生成插件 使用`javaModelGenerator`的`targetPackage`参数 -->
        <plugin type="com.smart4y.cloud.core.infrastructure.mapper.generator.plugins.EntityPlugin">
            <property name="author" value="Youtao"/>
        </plugin>

        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/cloud?useSSL=false"
                        userId="root"
                        password="12345678">
        </jdbcConnection>

        <javaTypeResolver>
            <!-- true - 把 JDBC DECIMAL 和 NUMERIC 类型解析为 java.math.BigDecimal -->
            <property name="forceBigDecimals" value="true"/>
        </javaTypeResolver>
        <!-- Entity 路径 -->
        <javaModelGenerator targetPackage="com.smart4y.cloud.gateway.domain.model"
                            targetProject="src/main/java"/>
        <!-- Mapper.xml 路径 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>
        <!-- Mapper.java 路径 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.smart4y.cloud.gateway.infrastructure.mapper"
                             targetProject="src/main/java"/>

        <!-- 使用"%"匹配所有表或者单独定义表 -->
        <!--<table tableName="%" mapperName="{0}Mapper">
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>-->
        <!--<table tableName="gateway_route" domainObjectName="GatewayRoute"/>
        <table tableName="gateway_rate_limit" domainObjectName="GatewayRateLimit"/>
        <table tableName="gateway_rate_limit_api" domainObjectName="GatewayRateLimitApi"/>
        <table tableName="base_api" domainObjectName="BaseApi"/>-->
        <table tableName="hello" domainObjectName="Hello">
            <columnOverride column="user_name" javaType="com.smart4y.cloud.base.domain.model.GatewayRoute"/>
        </table>
    </context>
</generatorConfiguration>